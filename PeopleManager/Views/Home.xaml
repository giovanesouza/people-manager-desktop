<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PeopleManager.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PeopleManager.Views"
    xmlns:organism="using:PeopleManager.Views.Organisms"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <organism:HeaderOrganism Grid.Row="0" />
        <organism:PeopleList Grid.Row="1" />
        <organism:Footer Grid.Row="2" />
    </Grid>
</Page>
