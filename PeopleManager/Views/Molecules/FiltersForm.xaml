<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="PeopleManager.Views.Molecules.FiltersForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PeopleManager.Views.Molecules"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Width="180"
        Margin="0,0,20,0"
        Orientation="Vertical">
        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="FILTRAR" />
        <TextBox
            x:Name="txtNameFilter"
            Margin="0,5,0,5"
            MaxLength="10"
            PlaceholderText="Nome" />
        <TextBox
            x:Name="txtSurnameFilter"
            Margin="0,5,0,5"
            MaxLength="10"
            PlaceholderText="Sobrenome" />
        <TextBox
            x:Name="txtCpfFilter"
            Margin="0,5,0,5"
            MaxLength="14"
            PlaceholderText="CPF" />
        <!--  KeyUp="cpf_KeyUp"  -->
        <Button
            x:Name="btnFilter"
            Margin="0,5,0,0"
            HorizontalAlignment="Right"
            Content="Filtrar"
            Style="{StaticResource AccentButtonStyle}" />
        <!--  Click="btnFilter_Click"  -->
    </StackPanel>
</UserControl>
