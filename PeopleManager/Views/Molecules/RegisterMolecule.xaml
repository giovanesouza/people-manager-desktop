<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PeopleManager.Views.Molecules.RegisterMolecule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PeopleManager.Views.Molecules"
    xmlns:views="using:PeopleManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <!-- Register fields -->
    <StackPanel Grid.Column="0" Orientation="Vertical" Width="180" Margin="0,0,20,0">
        <TextBlock Text="CADASTRO" Style="{StaticResource SubtitleTextBlockStyle}"/>
        <TextBox x:Name="txtbName" Text="{Binding Name, Mode=TwoWay}"
                 PlaceholderText="Nome" MaxLength="10" Margin="0,5,0,5" />
        <TextBox x:Name="txtbSurname" Text="{Binding Surname, Mode=TwoWay}"
                 PlaceholderText="Sobrenome" MaxLength="10" Margin="0,5,0,5" />
        <TextBox  x:Name="txtbCpf" Text="{Binding Cpf, Mode=TwoWay}"
           PlaceholderText="CPF"
           MaxLength="11"
           Margin="0,5,0,5"
           KeyUp="FormatCpf" />

        <Button Style="{StaticResource AccentButtonStyle}"
                Name="RegisterPerson" Content="Cadastrar"
                Margin="0,5,0,0"
                HorizontalAlignment="Right"
                Command="{Binding RegisterCommand}" />
    </StackPanel>
</UserControl>
